{
  "info": {
    "name": "Task Scheduler API",
    "description": "Collection for testing the Task Scheduler API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api/v1"
    }
  ],
  "item": [
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create One-off Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test One-off Task\",\n  \"trigger\": {\n    \"type\": \"one-off\",\n    \"datetime\": \"2025-01-01T12:00:00Z\"\n  },\n  \"action\": {\n    \"method\": \"GET\",\n    \"url\": \"https://httpbin.org/get\",\n    \"headers\": {\n      \"User-Agent\": \"TaskScheduler/1.0\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "Create Cron Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Daily Health Check\",\n  \"trigger\": {\n    \"type\": \"cron\",\n    \"cron\": \"0 9 * * *\"\n  },\n  \"action\": {\n    \"method\": \"POST\",\n    \"url\": \"https://httpbin.org/post\",\n    \"headers\": {\n      \"Content-Type\": \"application/json\"\n    },\n    \"payload\": {\n      \"message\": \"Daily health check\",\n      \"timestamp\": \"{{$timestamp}}\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tasks?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Task Name\",\n  \"trigger\": {\n    \"type\": \"cron\",\n    \"cron\": \"0 10 * * *\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Cancel Task",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "Get Task Results",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tasks/{{taskId}}/results",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", "{{taskId}}", "results"]
            }
          }
        }
      ]
    },
    {
      "name": "Results",
      "item": [
        {
          "name": "List All Results",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/results?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["results"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Filter Results by Success",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/results?success=true",
              "host": ["{{baseUrl}}"],
              "path": ["results"],
              "query": [
                {
                  "key": "success",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Metrics",
      "item": [
        {
          "name": "Get System Metrics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/metrics",
              "host": ["{{baseUrl}}"],
              "path": ["metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["health"]
        }
      }
    }
  ]
}
